<?xml version="1.0"?>
<interface>
  <!-- interface-requires gtk+ 2.12 -->
  <!-- interface-naming-policy project-wide -->
  <object class="GtkActionGroup" id="story_actions"/>
  <object class="GtkAction" id="show_pane_menu">
    <property name="label">Show _Tab</property>
  </object>
  <object class="GtkAction" id="show_source">
    <property name="label">_Source</property>
    <property name="tooltip">Show the Source pane</property>
    <signal name="activate" handler="action_show_source"/>
  </object>
  <object class="GtkAction" id="show_errors">
    <property name="label">_Errors</property>
    <property name="tooltip">Show the Errors pane</property>
    <signal name="activate" handler="action_show_errors"/>
  </object>
  <object class="GtkAction" id="show_index">
    <property name="label">_Index</property>
    <property name="tooltip">Show the Index pane</property>
    <signal name="activate" handler="action_show_index"/>
  </object>
  <object class="GtkAction" id="show_skein">
    <property name="label">S_kein</property>
    <property name="tooltip">Show the Skein pane</property>
    <signal name="activate" handler="action_show_skein"/>
  </object>
  <object class="GtkAction" id="show_transcript">
    <property name="label">_Transcript</property>
    <property name="tooltip">Show the Transcript pane</property>
    <signal name="activate" handler="action_show_transcript"/>
  </object>
  <object class="GtkAction" id="show_game">
    <property name="label">_Game</property>
    <property name="tooltip">Show the Game pane</property>
    <signal name="activate" handler="action_show_game"/>
  </object>
  <object class="GtkAction" id="show_documentation">
    <property name="label">_Documentation</property>
    <property name="tooltip">Show the Documentation pane</property>
    <signal name="activate" handler="action_show_documentation"/>
  </object>
  <object class="GtkAction" id="show_settings">
    <property name="label">Setti_ngs</property>
    <property name="tooltip">Show the Settings pane</property>
    <signal name="activate" handler="action_show_settings"/>
  </object>
  <object class="GtkAction" id="show_index_menu">
    <property name="label">Show _Index</property>
  </object>
  <object class="GtkAction" id="show_actions">
    <property name="label">Show _Actions</property>
    <property name="tooltip">Show the Actions index</property>
    <signal name="activate" handler="action_show_actions"/>
  </object>
  <object class="GtkAction" id="show_contents">
    <property name="label">Show _Contents</property>
    <property name="tooltip">Show the Contents index</property>
    <signal name="activate" handler="action_show_contents"/>
  </object>
  <object class="GtkAction" id="show_kinds">
    <property name="label">Show _Kinds</property>
    <property name="tooltip">Show the Kinds index</property>
    <signal name="activate" handler="action_show_kinds"/>
  </object>
  <object class="GtkAction" id="show_phrasebook">
    <property name="label">Show _Phrasebook</property>
    <property name="tooltip">Show the Phrasebook index</property>
    <signal name="activate" handler="action_show_phrasebook"/>
  </object>
  <object class="GtkAction" id="show_rules">
    <property name="label">Show _Rules</property>
    <property name="tooltip">Show the Rules index</property>
    <signal name="activate" handler="action_show_rules"/>
  </object>
  <object class="GtkAction" id="show_scenes">
    <property name="label">Show _Scenes</property>
    <property name="tooltip">Show the Scenes index</property>
    <signal name="activate" handler="action_show_scenes"/>
  </object>
  <object class="GtkAction" id="show_world">
    <property name="label">Show _World</property>
    <property name="tooltip">Show the World index</property>
    <signal name="activate" handler="action_show_world"/>
  </object>
  <object class="GtkAction" id="help_contents">
    <property name="label">_Contents</property>
    <property name="short_label">_Help</property>
    <property name="tooltip">Show the documentation's table of contents</property>
    <property name="stock_id">gtk-help</property>
    <signal name="activate" handler="action_help_contents"/>
  </object>
  <object class="GtkAction" id="help_license">
    <property name="label">_License</property>
    <property name="tooltip">Show the licensing help page</property>
    <signal name="activate" handler="action_help_license"/>
  </object>
  <object class="GtkAction" id="help_extensions">
    <property name="label">Help on Installed _Extensions</property>
    <property name="tooltip">Show the page listing installed extensions</property>
    <signal name="activate" handler="action_help_extensions"/>
  </object>
  <object class="GtkAction" id="help_recipe_book">
    <property name="label">_Recipe Book</property>
    <property name="tooltip">Show the recipe book listing all the examples</property>
    <signal name="activate" handler="action_help_recipe_book"/>
  </object>
  <object class="GtkActionGroup" id="unimplemented_actions">
    <property name="sensitive">False</property>
  </object>
  <object class="GtkAction" id="import_into_skein">
    <property name="label">_Import into Skein...</property>
    <property name="tooltip">Import a play transcript into this story's Skein</property>
  </object>
  <object class="GtkAction" id="search">
    <property name="label">_Search...</property>
    <property name="tooltip">Search through the entire project, including the documentation</property>
    <signal name="activate" handler="action_search"/>
  </object>
  <object class="GtkAction" id="show_last_command">
    <property name="label">Show _Last Command</property>
    <property name="tooltip">Show the last command</property>
    <signal name="activate" handler="action_show_last_command"/>
  </object>
  <object class="GtkAction" id="show_last_command_skein">
    <property name="label">Show Last Command in _Skein</property>
    <property name="tooltip">Show the last command in the Skein</property>
    <signal name="activate" handler="action_show_last_command_skein"/>
  </object>
  <object class="GtkAction" id="previous_changed_command">
    <property name="label">_Find Previous Changed Command</property>
    <property name="tooltip">Go to the previous changed command</property>
    <signal name="activate" handler="action_previous_changed_command"/>
  </object>
  <object class="GtkAction" id="next_changed_command">
    <property name="label">Find _Next Changed Command</property>
    <property name="tooltip">Go to the next changed command</property>
    <signal name="activate" handler="action_next_changed_command"/>
  </object>
  <object class="GtkAction" id="previous_difference">
    <property name="label">Find Pre_vious Difference</property>
    <property name="tooltip">Go to the previous difference</property>
    <signal name="activate" handler="action_previous_difference"/>
  </object>
  <object class="GtkAction" id="next_difference">
    <property name="label">Find Ne_xt Difference</property>
    <property name="tooltip">Go to the next difference</property>
    <signal name="activate" handler="action_next_difference"/>
  </object>
  <object class="GtkAction" id="next_difference_skein">
    <property name="label">Show Next _Difference in Skein</property>
    <property name="tooltip">Go to the next difference in the Skein</property>
    <signal name="activate" handler="action_next_difference_skein"/>
  </object>
  <object class="GtkAction" id="refresh_index">
    <property name="label">Refresh _Index</property>
    <property name="tooltip">Recompile the index files and display them</property>
    <property name="stock_id">gtk-refresh</property>
    <signal name="activate" handler="action_refresh_index"/>
  </object>
  <object class="GtkAction" id="go">
    <property name="label">_Go</property>
    <property name="short_label">_Go!</property>
    <property name="tooltip">Compile and run the story</property>
    <property name="stock_id">gtk-media-play</property>
    <signal name="activate" handler="action_go"/>
  </object>
  <object class="GtkAction" id="replay">
    <property name="label">_Replay Last Commands</property>
    <property name="short_label">Replay</property>
    <property name="tooltip">Compile the story, and re-run to the previously active play point</property>
    <property name="stock_id">gtk-media-rewind</property>
    <signal name="activate" handler="action_replay"/>
  </object>
  <object class="GtkAction" id="stop">
    <property name="label">_Stop</property>
    <property name="tooltip">Stop the story that's currently running</property>
    <property name="stock_id">gtk-media-stop</property>
    <signal name="activate" handler="action_stop"/>
  </object>
  <object class="GtkAction" id="play_all_blessed">
    <property name="label">Re_play Commands Blessed in Transcript</property>
    <property name="tooltip">Play through all the blessed nodes in the entire Skein</property>
    <signal name="activate" handler="action_play_all_blessed"/>
  </object>
  <object class="GtkAction" id="release">
    <property name="label">_Release...</property>
    <property name="short_label">_Release</property>
    <property name="tooltip">Compile the story ready for release</property>
    <property name="stock_id">gtk-cdrom</property>
    <signal name="activate" handler="action_release"/>
  </object>
  <object class="GtkAction" id="save_debug_build">
    <property name="label">Release for _Testing...</property>
    <property name="tooltip">Compile the story with debugging features on and export it</property>
    <signal name="activate" handler="action_save_debug_build"/>
  </object>
  <object class="GtkHPaned" id="facing_pages">
    <property name="visible">True</property>
    <property name="can_focus">True</property>
    <property name="position">1</property>
    <property name="position_set">True</property>
    <signal name="set_focus_child" handler="on_facing_pages_set_focus_child"/>
    <child>
      <placeholder/>
    </child>
  </object>
  <object class="GtkAction" id="play_menu">
    <property name="label">_Play</property>
  </object>
  <object class="GtkAction" id="replay_menu">
    <property name="label">_Replay</property>
  </object>
  <object class="GtkAction" id="release_menu">
    <property name="label">Re_lease</property>
  </object>
  <object class="GtkAction" id="test_me">
    <property name="label">_Test Me</property>
    <property name="tooltip">Compile the story, and run the "test me" command</property>
    <signal name="activate" handler="action_test_me"/>
  </object>
  <object class="GtkAction" id="open_materials_folder">
    <property name="label">_Open Materials Folder</property>
    <property name="tooltip">Open this story's Materials folder in the file manager</property>
    <property name="stock_id">gtk-directory</property>
    <signal name="activate" handler="action_open_materials_folder"/>
  </object>
  <object class="GtkAction" id="export_ifiction_record">
    <property name="label">_Export iFiction Record...</property>
    <property name="tooltip">Save this story's iFiction metadata</property>
    <signal name="activate" handler="action_export_ifiction_record"/>
  </object>
  <object class="GtkWindow" id="notes_window">
    <property name="title" translatable="yes">Notepad</property>
    <property name="default_width">300</property>
    <property name="default_height">300</property>
    <property name="icon_name">inform7</property>
    <property name="type_hint">utility</property>
    <property name="skip_taskbar_hint">True</property>
    <property name="skip_pager_hint">True</property>
    <signal name="delete_event" handler="on_notes_window_delete_event"/>
    <child>
      <object class="GtkScrolledWindow" id="scrolledwindow1">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="hscrollbar_policy">automatic</property>
        <property name="vscrollbar_policy">automatic</property>
        <child>
          <object class="GtkTextView" id="notes_view">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="wrap_mode">word-char</property>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkToggleAction" id="view_notepad">
    <property name="label">N_otepad</property>
    <property name="short_label">View Notepad</property>
    <property name="tooltip">Show or hide the notepad</property>
    <signal name="toggled" handler="action_view_notepad_toggled"/>
  </object>
</interface>
