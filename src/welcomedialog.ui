<?xml version="1.0"?>
<interface>
  <!-- interface-requires gtk+ 2.12 -->
  <!-- interface-naming-policy project-wide -->
  <object class="GtkWindow" id="welcomedialog">
    <property name="width_request">550</property>
    <property name="height_request">364</property>
    <property name="title" translatable="yes">Welcome to Inform 7</property>
    <property name="resizable">False</property>
    <property name="window_position">center-always</property>
    <property name="icon_name">inform7</property>
    <property name="urgency_hint">True</property>
    <signal name="delete_event" handler="gtk_main_quit"/>
    <child>
      <object class="GtkFixed" id="fixed1">
        <property name="visible">True</property>
        <child>
          <object class="GtkLabel" id="welcome_label">
            <property name="width_request">279</property>
            <property name="height_request">315</property>
            <property name="visible">True</property>
            <property name="xalign">0</property>
            <property name="yalign">0</property>
            <property name="label" translatable="yes" comments="Watch out with this string; it has to fit in the space of the welcome dialog splash graphic. You may need to test the application a few times to get it right.">Welcome to Inform 7, a design system for interactive fiction based on natural language.

To begin writing, please click one of the three buttons to the right.

Inform 7 was created by Graham Nelson, with the help of Emily Short and many others. The GNOME front-end was written by P. F. Chimento.</property>
            <property name="wrap">True</property>
          </object>
          <packing>
            <property name="x">30</property>
            <property name="y">35</property>
          </packing>
        </child>
        <child>
          <object class="GtkVButtonBox" id="vbuttonbox1">
            <property name="width_request">200</property>
            <property name="height_request">315</property>
            <property name="visible">True</property>
            <property name="spacing">6</property>
            <property name="layout_style">end</property>
            <child>
              <object class="GtkButton" id="welcome_new_button">
                <property name="label" translatable="yes">Start a _new project</property>
                <property name="visible">True</property>
                <property name="can_focus">True</property>
                <property name="receives_default">True</property>
                <property name="image">welcome_new_image</property>
                <property name="use_underline">True</property>
                <signal name="clicked" handler="on_welcome_new_button_clicked"/>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">False</property>
                <property name="position">0</property>
              </packing>
            </child>
            <child>
              <object class="GtkButton" id="welcome_reopen_button">
                <property name="label" translatable="yes">_Reopen last project</property>
                <property name="visible">True</property>
                <property name="sensitive">False</property>
                <property name="can_focus">True</property>
                <property name="receives_default">True</property>
                <property name="image">welcome_reopen_image</property>
                <property name="use_underline">True</property>
                <signal name="clicked" handler="on_welcome_reopen_button_clicked"/>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">False</property>
                <property name="position">1</property>
              </packing>
            </child>
            <child>
              <object class="GtkButton" id="welcome_open_button">
                <property name="label" translatable="yes">_Open an existing project</property>
                <property name="visible">True</property>
                <property name="can_focus">True</property>
                <property name="receives_default">True</property>
                <property name="image">welcome_open_image</property>
                <property name="use_underline">True</property>
                <signal name="clicked" handler="on_welcome_open_button_clicked"/>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">False</property>
                <property name="position">2</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="x">332</property>
            <property name="y">35</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkImage" id="welcome_new_image">
    <property name="visible">True</property>
    <property name="stock">gtk-new</property>
    <property name="icon-size">4</property>
  </object>
  <object class="GtkImage" id="welcome_reopen_image">
    <property name="visible">True</property>
    <property name="stock">gtk-jump-to</property>
    <property name="icon-size">4</property>
  </object>
  <object class="GtkImage" id="welcome_open_image">
    <property name="visible">True</property>
    <property name="stock">gtk-open</property>
    <property name="icon-size">4</property>
  </object>
</interface>
